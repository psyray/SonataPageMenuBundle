{% set navbar_brand = sonata_page_menu.bootstrap_options.navbar_brand %}
<nav class="navbar navbar-default{% if inverse %} navbar-inverse{% endif %}{% if fixed %} navbar-fixed-top{% endif %}">
    <div class="container">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle {{ toggle }}d" data-toggle="{{ toggle }}" data-target="#main-menu-{{ toggle }}" aria-expanded="false">
                <span class="sr-only">{{ navbar_brand.mobile_text|trans }}</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            {% if navbar_brand.displayed %}
                <a class="navbar-brand" href="{% if navbar_brand.link_path != '#' %}{{ path(navbar_brand.link_path) }}{% else %}#{% endif %}">
                    {{ navbar_brand.title|raw }}
                </a>
            {% endif %}
        </div>
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="{{ toggle }} navbar-{{ toggle }}" id="main-menu-{{ toggle }}">
            {% set menu = knp_menu_get('main', [], {'type': type} ) %}
            {{ knp_menu_render(menu, {'currentClass': 'active', 'template': '@SkillbertoSonataPageMenu/Menu/knp_bootstrap_menu.html.twig'}) }}
        </div>
        <!-- /.navbar-{{ toggle }} -->
    </div>
    <!-- /.container-fluid -->
</nav>
